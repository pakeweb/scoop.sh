$accentColor = #4172c8

.nav-links
	.nav-item
		text-transform capitalize

// search input reveal only on focus
.navbar
	.search-box
		margin-left 1rem
		margin-right 0

		input
			border-color transparent
			cursor pointer
			position relative
			width 0

			&:focus
				border-color $borderColor
				cursor text
				left 0
				width 10rem

		.suggestions
			right 0
